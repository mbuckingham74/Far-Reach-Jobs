# Database (MySQL container included in docker-compose)
MYSQL_DATABASE=far_reach_jobs
MYSQL_USER=far_reach_jobs
MYSQL_PASSWORD=your_secure_password_here
MYSQL_ROOT_PASSWORD=your_mysql_root_password_here

# Auth
SECRET_KEY=your_64_character_random_secret_key_here_generate_with_openssl_rand
JWT_ALGORITHM=HS256
JWT_EXPIRE_HOURS=24

# Email (Gmail SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your_app_password_here
FROM_EMAIL=noreply@far-reach-jobs.tachyonfuture.com

# App
APP_URL=https://far-reach-jobs.tachyonfuture.com
ENVIRONMENT=development

# NPM (Nginx Proxy Manager) - for deployment reference only
NPM_EMAIL=your-npm-email@example.com
NPM_PASSWORD=your_npm_password_here

# Docker Network (for NPM proxy routing)
NPM_NETWORK=npm_default
